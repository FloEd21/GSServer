                                    <DropShadowEffect BlurRadius="10"  Opacity=".5" ShadowDepth="10"/>
                                </Border.Effect>
                                <Grid Width="253" Height="340">
                                    <Grid.Background>
                                        <ImageBrush ImageSource="{Binding ImageFile}" Stretch="UniformToFill" />
                                    </Grid.Background>
                                    <controls:HelixViewport3D Visibility="{Binding ModelOn, Converter={StaticResource BoolToVis}}"/>
                                    <StackPanel>
                                        <controls:Debug Visibility="{Binding DebugVisability, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5">
                                        <ToggleButton Style="{StaticResource MaterialDesignActionLightToggleButton}" HorizontalAlignment="Center" Width="25" Height="25" ToolTip="3DView" IsChecked="{Binding ModelOn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <Label Content="3D" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                    </StackPanel>
                    </Grid>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
                    <controls:BottomStatusBar IsEnabled="{Binding ScreenEnabled}"/>
                    <Button Margin="5,0,0,0" Width="120" Height="30" ToolTip="{StaticResource btntipConnect}"
                            Command="{Binding ClickConnectCommand}" Content="{Binding ConnectButtonContent}" Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
                </StackPanel>
            </Grid>
        </md:DrawerHost>
    </Grid>
</UserControl>



 



