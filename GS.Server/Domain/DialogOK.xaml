<UserControl x:Class="GS.Server.Domain.DialogOK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:guiding="clr-namespace:GS.Server.Charting"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance guiding:ChartingVM}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" Margin="5 0" xml:space="preserve" Text="{Binding DialogMsg}"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0 16 0 0">
            <Button IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding ClickOkDialogCommand}" Content="{DynamicResource btnOk}"/>
        </StackPanel>
    </Grid>
    </UserControl>
