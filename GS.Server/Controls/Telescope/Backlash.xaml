<UserControl x:Class="GS.Server.Controls.Telescope.Backlash"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             TextOptions.TextFormattingMode="Display"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical" Margin="0,5,0,0">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Slider Minimum="0" Maximum="500" Width="200" Name="slValue" HorizontalAlignment="Left" IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Center"
                    ToolTip="{DynamicResource sldtipBacklash}" Style="{StaticResource MaterialDesignSlider}" Value="{Binding DecBacklash, UpdateSourceTrigger=PropertyChanged, Delay=800}"/>
            <Label HorizontalAlignment="Right" VerticalAlignment="Bottom"  Content="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <Label HorizontalAlignment="Center" Content="{DynamicResource lbBacklash}"/>
    </StackPanel> 
</UserControl>
 
