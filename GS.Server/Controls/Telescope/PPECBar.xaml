<UserControl x:Class="GS.Server.Controls.Telescope.PpecBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextOptions.TextFormattingMode="Display"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="{Binding PecEnabled}">
        <StackPanel.Style>
            <Style TargetType="StackPanel">
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.3" />
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="Opacity" Value="1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </StackPanel.Style>
        <ToggleButton Width="20" Height="20" ToolTip="{DynamicResource tbOnOff}" Style="{StaticResource MaterialDesignActionLightToggleButton}"
                          IsChecked="{Binding PpecOn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="{DynamicResource lbPpec}"/>
            <md:DialogHost Margin="5,0,0,0" CloseOnClickAway="True" IsOpen="{Binding IsPpecDialogOpen}" DialogContent="{Binding PpecContent}">
                <ToggleButton  HorizontalAlignment="Center" Width="20" Height="20" ToolTip="{DynamicResource tbStartTrainingMode}"
                              IsChecked="{Binding PecTrainOn}" Style="{StaticResource MaterialDesignActionLightToggleButton}"
                              Command="{Binding OpenPpecDialogCommand}"/>
            </md:DialogHost>
            <Label Content="{DynamicResource lbPpecTraining}"/>
        <md:PackIcon Margin="5,0,0,0" Kind="Timer" Width="25" Height="25" ToolTip="{DynamicResource ictipPpecTimer}">
                <md:PackIcon.Style>
                    <Style TargetType="md:PackIcon">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PecTrainInProgress}" Value="True">
                                <Setter Property="Foreground" Value="LimeGreen"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding PecTrainInProgress}" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </md:PackIcon.Style>
            </md:PackIcon>
            <Label Content="{DynamicResource lbInTraining}"/>
    </StackPanel>
</UserControl>
