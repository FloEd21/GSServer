<UserControl x:Class="GS.Server.Controls.Dialogs.DialogOK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <GroupBox Header="{Binding DialogCaption}" Margin="5">
        <StackPanel Orientation="Vertical">
            <TextBlock VerticalAlignment="Center" Margin="5 0" xml:space="preserve" Text="{Binding DialogMsg}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button IsDefault="True" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding ClickOkDialogCommand}" Content="{StaticResource btnOk}"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
    </UserControl>
