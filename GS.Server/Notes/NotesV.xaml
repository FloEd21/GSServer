<UserControl x:Class="GS.Server.Notes.NotesV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes" Loaded="NotesV_OnLoaded"
             TextOptions.TextFormattingMode="Display"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="Open_Executed" />
        <CommandBinding Command="ApplicationCommands.SaveAs" Executed="SaveAs_Executed" />
        <CommandBinding Command="ApplicationCommands.Save" Executed="Save_Executed" />
    </UserControl.CommandBindings>
    <Grid>
        <md:DialogHost HorizontalAlignment="Center" CloseOnClickAway="True" Name="DialogHost"
                       IsOpen="{Binding Path=IsDialogOpen}" DialogContent="{Binding Path=DialogContent}"/>
        <!--<md:DrawerHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="2" 
            IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}" 
            BorderBrush="{DynamicResource MaterialDesignDivider}">
            <md:DrawerHost.LeftDrawerContent>
            <Grid Width="700">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="0" >
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18"  Foreground="{DynamicResource PrimaryHueMidBrush}">Settings</Label>
                    <ToggleButton DockPanel.Dock="Top" HorizontalAlignment="Right" Margin="5" 
                        Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                        Command="{x:Static md:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"/>
                </Grid>
            </Grid>
        </md:DrawerHost.LeftDrawerContent>-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--<StackPanel Grid.Row="0" Orientation="Horizontal">
                <ToggleButton HorizontalAlignment="Left" VerticalAlignment="Top"
                        Command="{x:Static md:DrawerHost.OpenDrawerCommand}" CommandParameter="{x:Static Dock.Left}"
                        Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False" x:Name="MenuToggleButton"/>
            </StackPanel>-->
            <md:ColorZone Grid.Row="0" Mode="Standard">
                <ToolBarTray VerticalAlignment="Stretch" IsLocked="True" >
                    <ToolBar Background="Transparent">
                        <Button Padding="2" Command="Open" ToolTip="{DynamicResource btntipNOpen}"><md:PackIcon Kind="FileDocumentOutline"/></Button>
                        <Button Padding="2" Command="Save" ToolTip="{DynamicResource btntipNSave}"><md:PackIcon Kind="ContentSave"/></Button>
                        <Button Padding="2" Command="SaveAs" ToolTip="{DynamicResource btntipNSaveAs}"><md:PackIcon Kind="FileReplace"/></Button>
                        <Button Name="btPrint" Padding="2" ToolTip="{DynamicResource btntipNPrint}" Click="BtPrint_OnClick"><md:PackIcon Kind="Printer"/></Button>
                        <Button Padding="2" Command="Cut" ToolTip="{DynamicResource btntipNCut}" ToolBar.OverflowMode="AsNeeded"><md:PackIcon Kind="ContentCut"/></Button>
                        <Button Padding="2" Command="Copy" ToolTip="{DynamicResource btntipNCopy}" ToolBar.OverflowMode="AsNeeded"><md:PackIcon Kind="ContentCopy"/></Button>
                        <Button Padding="2" Command="Paste" ToolTip="{DynamicResource btntipNPaste}" ToolBar.OverflowMode="AsNeeded">
                                        <md:PackIcon Kind="ContentPaste"/></Button>
                        <Button Padding="2" Command="Redo"  ToolTip="{DynamicResource btntipNRedo}" ToolBar.OverflowMode="AsNeeded">
                                        <md:PackIcon Kind="Arrow"/></Button>
                        <Button Padding="2" Command="Undo"  ToolTip="{DynamicResource btntipNUndo}" ToolBar.OverflowMode="AsNeeded">
                                        <md:PackIcon Kind="Undo"/>
                                    </Button>
                        <Button Padding="2" Command="ToggleNumbering"  ToolTip="{DynamicResource btntipNNumbering}" ToolBar.OverflowMode="AsNeeded">
                                        <md:PackIcon Kind="FormatListNumbered"/>
                                    </Button>
                        <Button Padding="2" Command="ToggleBullets"  ToolTip="{DynamicResource btntipNBullets}" ToolBar.OverflowMode="AsNeeded">
                                        <md:PackIcon Kind="FormatListBulleted"/>
                                    </Button>
                        <Button Padding="2" Command="DecreaseIndentation"  ToolTip="{DynamicResource btntipNDIndent}" ToolBar.OverflowMode="AsNeeded">
                                        <md:PackIcon Kind="FormatIndentDecrease"/>
                                    </Button>
                        <Button Padding="2" Command="IncreaseIndentation"  ToolTip="{DynamicResource btntipNInIndent}" ToolBar.OverflowMode="AsNeeded">
                                        <md:PackIcon Kind="FormatIndentIncrease"/>
                                    </Button>
                        <ToggleButton Name="tbLeft" Command="EditingCommands.AlignLeft" Padding="2" ToolTip="{DynamicResource btntipNLeftAlign}" ToolBar.OverflowMode="AsNeeded" Height="20" Width="20" Margin="2"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}" Click="TbLeft_OnClick">
                                        <ToggleButton.Content>
                                            <md:PackIcon Kind="FormatAlignLeft" />
                                        </ToggleButton.Content>
                                        <md:ToggleButtonAssist.OnContent>
                                            <md:PackIcon Kind="FormatAlignLeft" Background="{DynamicResource SecondaryAccentBrush}" />
                                        </md:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                        <ToggleButton Name="tbCenter" Command="EditingCommands.AlignCenter" Padding="2" ToolTip="{DynamicResource btntipNCenterAlign}" ToolBar.OverflowMode="AsNeeded" Height="20" Width="20" Margin="2"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}" Click="TbCenter_OnClick">
                                        <ToggleButton.Content>
                                            <md:PackIcon Kind="FormatAlignCenter" />
                                        </ToggleButton.Content>
                                        <md:ToggleButtonAssist.OnContent>
                                            <md:PackIcon Kind="FormatAlignCenter" Background="{DynamicResource SecondaryAccentBrush}" />
                                        </md:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                        <ToggleButton Name="tbRight" Command="EditingCommands.AlignRight" Padding="2" ToolTip="{DynamicResource btntipNRightAlign}" ToolBar.OverflowMode="AsNeeded" Height="20" Width="20" Margin="2"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}" Click="TbRight_OnClick">
                                        <ToggleButton.Content>
                                            <md:PackIcon Kind="FormatAlignRight" />
                                        </ToggleButton.Content>
                                        <md:ToggleButtonAssist.OnContent>
                                            <md:PackIcon Kind="FormatAlignRight" Background="{DynamicResource SecondaryAccentBrush}" />
                                        </md:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                        <ToggleButton Name="tbBold" Command="ToggleBold" Padding="2" ToolTip="{DynamicResource btntipNBold}" ToolBar.OverflowMode="AsNeeded" Height="20" Width="20" Margin="2"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}">
                                        <ToggleButton.Content><md:PackIcon Kind="FormatBold" /></ToggleButton.Content>
                                        <md:ToggleButtonAssist.OnContent>
                                            <md:PackIcon Kind="FormatBold" Background="{DynamicResource SecondaryAccentBrush}" /></md:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                        <ToggleButton Name="tbItalic" Command="ToggleItalic" ToolTip="{DynamicResource btntipNInItalic}" ToolBar.OverflowMode="AsNeeded" Height="20" Width="20" Margin="2"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}">
                                        <ToggleButton.Content>
                                            <md:PackIcon Kind="FormatItalic" />
                                        </ToggleButton.Content>
                                        <md:ToggleButtonAssist.OnContent>
                                            <md:PackIcon Kind="FormatItalic" Background="{DynamicResource SecondaryAccentBrush}" />
                                        </md:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                        <ToggleButton Name="tbUnderline" Command="EditingCommands.ToggleUnderline" ToolBar.OverflowMode="AsNeeded" ToolTip="{DynamicResource btntipNUnderline}" Height="20" Width="20" Margin="2"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}">
                                        <ToggleButton.Content>
                                            <md:PackIcon Kind="FormatUnderline" />
                                        </ToggleButton.Content>
                                        <md:ToggleButtonAssist.OnContent>
                                            <md:PackIcon Kind="FormatUnderline" Background="{DynamicResource SecondaryAccentBrush}" />
                                        </md:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                        <ComboBox Name="cbFontFamily" ToolTip="{DynamicResource btntipNFont}" Width="100" DropDownClosed="CbFontFamily_DropDownClosed" />
                        <ComboBox Name="cbFontSize" ToolTip="{DynamicResource btntipNFontSize}" DropDownClosed="CbFontSize_DropDownClosed" SelectedValuePath="Content"/>
                        <Button Padding="2" Click="BtForground_Click" ToolTip="{DynamicResource btntipNFontForground}" ToolBar.OverflowMode="AsNeeded">
                            <md:PackIcon Kind="Paintbrush" Name="Paintbrush"/>
                                    </Button>
                        <Button Padding="2" Click="BtBackground_Click" ToolTip="{DynamicResource btntipNFontBackground}" ToolBar.OverflowMode="AsNeeded">
                                <md:PackIcon Kind="ColorLens" Name="ColorLens"/>
                                    </Button>
                        <ToggleButton Name="tbSpell" Padding="2" ToolTip="{DynamicResource btntipNSpellcheck}" ToolBar.OverflowMode="AsNeeded" Height="20" Width="20" Margin="2"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}" Click="TbSpell_OnClick">
                                        <ToggleButton.Content>
                                    <md:PackIcon Kind="Spellcheck" />
                                        </ToggleButton.Content>
                                        <md:ToggleButtonAssist.OnContent>
                                    <md:PackIcon Kind="Spellcheck" Background="{DynamicResource SecondaryAccentBrush}" />
                                        </md:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                        </ToolBar>
                        </ToolBarTray>
            </md:ColorZone>
            <md:ColorZone Grid.Row="1" Mode="Standard">
            <ToolBarTray VerticalAlignment="Stretch" IsLocked="True">
                <ToolBar Background="Transparent" Margin="5,0,0,0">
                        <Label VerticalAlignment="Center" Padding="0" Content="{DynamicResource lbShortcuts}"/>
                        <Button ToolTip="{DynamicResource btntipNDate}" Padding="2" Click="BtDate_OnClick"><md:PackIcon Kind="DateRange"/></Button>
                        <Button ToolTip="{DynamicResource btntipNTime}" Padding="2" Click="BtTime_OnClick"><md:PackIcon Kind="EventTime"/></Button>
                        <Button ToolTip="{DynamicResource btntipNRa}" Click="Ra_OnClick" Margin="1" Padding="2" Content="{DynamicResource btntipNRa}"/>
                        <Button ToolTip="{DynamicResource btntipNDec}" Click="Dec_OnClick"  Margin="1" Padding="2" Content="{DynamicResource btntipNDec}"/>
                        <Button ToolTip="{DynamicResource btntipNAlt}" Click="BtAlt_OnClick" Margin="1" Padding="2" Content="{DynamicResource btntipNAlt}"/>
                        <Button ToolTip="{DynamicResource btntipNAz}" Click="BtAz_OnClick" Margin="1" Padding="2" Content="{DynamicResource btntipNAz}"/>
                        <Button ToolTip="{DynamicResource btntipNMoon}" Click="BtMoon_OnClick" Margin="1" Padding="2" Content="{DynamicResource btnNMoon}"/>
                        <Button ToolTip="{DynamicResource btntipNLog}" Click="BtLog_OnClick" Margin="1" Padding="2" Content="{DynamicResource btnNLog}"/>
                        <Button ToolTip="{DynamicResource btntipNAlignment}" Click="BtAlignmentMode_OnClick" Margin="1" Padding="2" Content="{DynamicResource btnNAlignment}"/>
                        <Button ToolTip="{DynamicResource btntipNEqType}" Click="BtEqSystem_OnClick" Margin="1" Padding="2" Content="{DynamicResource btnNEqType}"/>
                        <Button ToolTip="{DynamicResource btntipNOb}" Click="BtObservatory_OnClick" Margin="1" Padding="2" Content="{DynamicResource btnNOb}"/>
                        <Button ToolTip="{DynamicResource btntipNWeather}" Click="BtWeather_OnClick" HorizontalAlignment="Left"  Margin="1" Padding="2" Content="{DynamicResource btntipNWeather}"/>
                        <!--<ComboBox Name="cbSkySettings" ToolTip="Font" Width="100" />-->
                    </ToolBar>
            </ToolBarTray>
            </md:ColorZone>
            <RichTextBox Grid.Row="2" x:Name="rtbEditor" AcceptsTab="True" AcceptsReturn="True" SpellCheck.IsEnabled="False" 
                         FontFamily="Segoe UI" FontSize="14" VerticalScrollBarVisibility="Auto" Unloaded="RtbEditor_OnUnloaded" TextOptions.TextFormattingMode="Display"
                             TextOptions.TextRenderingMode="Auto"  MinHeight="200" MinWidth="700" Foreground="{DynamicResource MaterialDesignBody}" 
                             KeyDown="RtbEditor_OnKeyDown" SelectionChanged="RtbEditor_SelectionChanged" Background="{DynamicResource MaterialDesignPaper}"/>
        </Grid>
    <!--</md:DrawerHost>-->
    </Grid>
</UserControl>
