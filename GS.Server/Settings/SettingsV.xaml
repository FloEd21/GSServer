<UserControl x:Class="GS.Server.Settings.SettingsV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:shared="clr-namespace:GS.Shared;assembly=GS.Shared"
             TextOptions.TextFormattingMode="Display"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="ItemsControl" x:Key="LogViewerStyle">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <ScrollViewer CanContentScroll="True" >
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <DataTemplate DataType="{x:Type shared:MonitorEntry}">
                <Grid IsSharedSizeScope="True"  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Index" Width="Auto"/>
                        <ColumnDefinition SharedSizeGroup="Date" Width="Auto"/>
                        <ColumnDefinition SharedSizeGroup="Category" Width="Auto"/>
                        <ColumnDefinition SharedSizeGroup="Type" Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Index}" Grid.Column="0" FontSize="13" FontWeight="Bold" Margin="5,0,0,0"/>
                    <!-- Other fields to display in the monitor textblock
                                <TextBlock Text="{Binding Datetime}" Grid.Column="1" FontSize="13" Margin="5,0,0,0"/>
                                <TextBlock Text="{Binding Category}" Grid.Column="2" FontSize="13" Margin="5,0,0,0"/>
                                <TextBlock Text="{Binding Type}" Grid.Column="3" FontSize="13" Margin="5,0,0,0"/>-->
                    <TextBlock Text="{Binding Method}" Grid.Column="3" FontSize="13" Margin="5,0,0,0"/>
                    <TextBlock Text="{Binding Message}" Grid.Column="4" FontSize="13" Margin="5,0,0,0" TextWrapping="Wrap"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <md:DialogHost HorizontalAlignment="Center" VerticalAlignment="Center" CloseOnClickAway="True"
                       IsOpen="{Binding IsDialogOpen}" DialogContent="{Binding DialogContent}"/>
        <md:DrawerHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="2" 
                       IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}" 
                       BorderBrush="{DynamicResource MaterialDesignDivider}">
            <md:DrawerHost.LeftDrawerContent>
                <Grid Width="750">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="26"/>
                        <RowDefinition Height="26"/>
                        <RowDefinition Height="26"/>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Foreground="{DynamicResource PrimaryHueMidBrush}">Monitor</Label>
                    <ToggleButton Grid.Row="0"   HorizontalAlignment="Right" Margin="5" ToolTip="Close"
                              Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                              Command="{x:Static md:DrawerHost.CloseDrawerCommand}"
                              CommandParameter="{x:Static Dock.Left}"
                              IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="20 0">
                        <Label Width="80" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{DynamicResource PrimaryHueMidBrush}">Device:</Label>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding ServerDevice}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Server</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Telescope}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Telescope</TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="20 0">
                        <Label Width="80" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{DynamicResource PrimaryHueMidBrush}">Category:</Label>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Driver}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Driver</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Interface}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Interface</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Server}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Server</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Mount}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Mount</TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="20 0">
                        <Label Width="80" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{DynamicResource PrimaryHueMidBrush}">Type:</Label>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Information}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Info</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Data}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Data</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Warning}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Warning</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding Error}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" >Error</TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Margin="20 10" Background="Black" VerticalAlignment="Top">
                        <ItemsControl Height="235" FontFamily="Segoe UI" FontSize="8" Foreground="DarkSeaGreen" ItemsSource="{Binding Path=MonitorEntries}" Style="{StaticResource LogViewerStyle}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="5" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding SessionLog}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="Auto" ToolTip="On/Off creating a session log" Margin="10 0" VerticalAlignment="Center">Session Log</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <CheckBox IsChecked="{Binding MonitorToFile}" Style="{StaticResource MaterialDesignCheckBox}"/>
                            <TextBlock Width="Auto" Margin="10 0" VerticalAlignment="Center" ToolTip="Writes text items to a file" >Log to file</TextBlock>
                        </StackPanel>
                        <Button Margin="10 0" ToolTip="Start/Stop Monitoring"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="100"
                        Command="{Binding ClickStartStopCommand}"
                        Content="{Binding StartStopButtonText}"/>
                        <Button Margin="10 0" ToolTip="Clear text items"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="100"
                        Command="{Binding ClickClearCommand}"
                        Content="Clear"/>
                        <Button Margin="10 0" ToolTip="Export text to a file"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="100"
                        Command="{Binding ClickExportCommand}"
                        Content="Export"/>
                        <TextBlock Width="65" Margin="10 0" VerticalAlignment="Center" ToolTip="Total text lines" Text="{Binding Path=MonitorEntries.Count}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                </Grid>
            </md:DrawerHost.LeftDrawerContent>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <ToggleButton HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="False" x:Name="MenuToggleButton" ToolTip="Open"
                                  Command="{x:Static md:DrawerHost.OpenDrawerCommand}" CommandParameter="{x:Static Dock.Left}"
                                  Style="{StaticResource MaterialDesignHamburgerToggleButton}"/>
                </StackPanel>
                <Grid Grid.Row="1" HorizontalAlignment="Center" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"  Margin="10 0" VerticalAlignment="Center"  HorizontalAlignment="Center"  Foreground="{DynamicResource PrimaryHueMidBrush}">Available Tabs</TextBlock>
                    <TextBlock Grid.Row="0" Grid.Column="1"  Margin="10 0" VerticalAlignment="Center"  HorizontalAlignment="Center"  Foreground="{DynamicResource PrimaryHueMidBrush}">Options</TextBlock>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Width="Auto"  Margin="10 10">
                        <CheckBox ToolTip="On/Off menu item" IsChecked="{Binding SkyWatcher}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">SkyWatcher</TextBlock>
                    </StackPanel>
                    <!--<StackPanel Orientation="Horizontal" Width="Auto"  Margin="10 10">
                        <CheckBox IsChecked="{Binding Focuser}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                    <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Focuser</TextBlock>
                    </StackPanel>-->
                    <StackPanel Orientation="Horizontal" Width="Auto"  Margin="10 10">
                        <CheckBox ToolTip="On/Off menu item" IsChecked="{Binding Charting}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Charts</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="Auto"  Margin="10 10">
                        <CheckBox ToolTip="On/Off menu item" IsChecked="{Binding Notes}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Notes</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="Auto"  Margin="10 10">
                        <CheckBox IsChecked="{Binding Gamepad}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Gamepad</TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Width="Auto" Orientation="Vertical" VerticalAlignment="Top"  Margin="10 0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Width="Auto"  Margin="10 10">
                        <CheckBox ToolTip="On/Off screensavor" IsChecked="{Binding SleepMode}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">No Sleep mode</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10 10">
                        <CheckBox ToolTip="Start in taks bar" IsChecked="{Binding StartMinimized}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Start minimized</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10 10">
                        <CheckBox ToolTip="Window above other windows" IsChecked="{Binding StartOnTop}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Start window on top</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10 10">
                        <CheckBox ToolTip="Polar alignment warning" IsChecked="{Binding HomeWarning}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Home Warning On</TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top"  Margin="0 0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="10 10">
                        <CheckBox ToolTip="Activate speech" IsChecked="{Binding VoiceActive}" Style="{StaticResource MaterialDesignActionLightToggleButton}"/>
                        <TextBlock Margin="10 0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Voice/Speech on</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10 -5">
                        <ComboBox md:HintAssist.Hint="Voice Name" ToolTip="Voice selection"
                          MinWidth="10" Width="210" HorizontalAlignment="Left"
                          ItemsSource="{Binding VoiceNames}"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.Text>
                                <Binding Path="VoiceName" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                            </ComboBox.Text>
                            <ComboBox.ItemsPanel >
                                <ItemsPanelTemplate >
                                    <VirtualizingStackPanel  />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10 15" HorizontalAlignment="Left" Width="210">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0 5" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}" >Volume level</TextBlock>
                            <TextBlock Margin="75 0" Width="60" VerticalAlignment="Center" Text="{Binding VoiceVolume}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        <Slider Value="{Binding VoiceVolume, Mode=TwoWay}" Foreground="{DynamicResource PrimaryHueLightBrush}" ToolTip="Volume"
                        TickFrequency="10" 
                        TickPlacement="BottomRight"
                        Orientation="Horizontal"
                        Delay="1"
                        Minimum="1"
                        Maximum="100" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left" Width="210">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">Simulator Performance</TextBlock>
                            <TextBlock Margin="15,0,0,0" Text="{Binding SimInterval, StringFormat={} {0}ms}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalAlignment="Left">Fast</Label>
                            <Label Grid.Column="1" HorizontalAlignment="Center">Med</Label>
                            <Label Grid.Column="2" HorizontalAlignment="Right">Slow</Label>
                        </Grid>
                        <Slider Value="{Binding SimInterval, Mode=TwoWay}" Foreground="{DynamicResource PrimaryHueLightBrush}" ToolTip="Performance"
                                TickFrequency="10" 
                                IsSnapToTickEnabled ="True"
                                TickPlacement="BottomRight"
                                Orientation="Horizontal"
                                Delay="3"
                                Minimum="100"
                                Maximum="500" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left" Width="210">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">SkyWatcher Performance</TextBlock>
                            <TextBlock  Width="60" VerticalAlignment="Center" Text="{Binding SkyInterval, StringFormat={} {0}ms}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalAlignment="Left">Fast</Label>
                            <Label Grid.Column="1" HorizontalAlignment="Center">Med</Label>
                            <Label Grid.Column="2" HorizontalAlignment="Right">Slow</Label>
                        </Grid>
                        <Slider Value="{Binding SkyInterval, Mode=TwoWay}" Foreground="{DynamicResource PrimaryHueLightBrush}" ToolTip="Performance"
                                TickFrequency="10"  
                                IsSnapToTickEnabled ="True"
                                TickPlacement="BottomRight"
                                Orientation="Horizontal"
                                Delay="3"
                                Minimum="100"
                                Maximum="500" />
                    </StackPanel>
                </StackPanel>
  

                </Grid>

                
          </Grid>
        </md:DrawerHost>
    </Grid>
</UserControl>